{
  "name": "changelayers",
  "displayName": "Workspace Snapshots",
  "description": "Manage and diff sequential, uncommitted change sets as snapshots.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:workspaceSnapshotsView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workspace_snapshots.snapshot",
        "title": "Create New Snapshot",
        "icon": "$(add)"
      },
      {
        "command": "workspace_snapshots.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "workspace_snapshots.showDiff",
        "title": "Show Snapshot Diff"
      },
      {
        "command": "workspace_snapshots.discardFile",
        "title": "Revert File to Previous State",
        "icon": "$(discard)"
      },
      {
        "command": "workspace_snapshots.discard",
        "title": "Discard Snapshot",
        "icon": "$(discard)"
      },
      {
        "command": "workspace_snapshots.discardAll",
        "title": "Discard All Snapshots",
        "icon": "$(discard)"
      },
      {
        "command": "workspace_snapshots.clearAllSnapshots",
        "title": "Clear All Snapshots (Keep Current Files)",
        "icon": "$(trash)"
      },
      {
        "command": "workspace_snapshots.openFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "workspace-snapshots-container",
          "title": "Workspace Snapshots",
          "icon": "$(layers)"
        }
      ]
    },
    "views": {
      "workspace-snapshots-container": [
        {
          "id": "workspaceSnapshotsView",
          "name": "Snapshots",
          "icon": "$(layers)",
          "contextualTitle": "Workspace Snapshots"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "workspace_snapshots.snapshot",
          "when": "view == workspaceSnapshotsView",
          "group": "navigation"
        },
        {
          "command": "workspace_snapshots.discardAll",
          "when": "view == workspaceSnapshotsView",
          "group": "navigation"
        },
        {
          "command": "workspace_snapshots.clearAllSnapshots",
          "when": "view == workspaceSnapshotsView",
          "group": "navigation"
        },
        {
          "command": "workspace_snapshots.refresh",
          "when": "view == workspaceSnapshotsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "workspace_snapshots.discard",
          "when": "view == workspaceSnapshotsView && viewItem == snapshot",
          "group": "inline@1"
        },
        {
            "command": "workspace_snapshots.discardFile",
            "when": "view == workspaceSnapshotsView && viewItem =~ /^snapshotFile/",
            "group": "inline@1"
        },
        {
            "command": "workspace_snapshots.openFile",
            "when": "view == workspaceSnapshotsView && viewItem == 'snapshotFile'",
            "group": "inline@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.46.0",
    "typescript": "^5.1.6"
  }
}
