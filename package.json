{
  "name": "changelayers",
  "displayName": "Change Layers",
  "description": "Manage and diff sequential, uncommitted change sets as layers.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:changeLayersView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "changelayers.snapshot",
        "title": "Snapshot as New Layer",
        "icon": "$(add)"
      },
      {
        "command": "changelayers.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "changelayers.showDiff",
        "title": "Show Layer-on-Layer Diff"
      },
      {
        "command": "changelayers.discardFile",
        "title": "Revert File to Previous Layer",
        "icon": "$(discard)"
      },
      {
        "command": "changelayers.discard",
        "title": "Discard Layer",
        "icon": "$(discard)"
      },
      {
        "command": "changelayers.discardAll",
        "title": "Discard All Layers",
        "icon": "$(discard)"
      },
      {
        "command": "changelayers.clearAllLayers",
        "title": "Clear All Layers (Keep Current Files)",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "change-layers-container",
          "title": "Change Layers",
          "icon": "$(layers)"
        }
      ]
    },
    "views": {
      "change-layers-container": [
        {
          "id": "changeLayersView",
          "name": "Layers",
          "icon": "$(layers)",
          "contextualTitle": "Change Layers"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "changelayers.snapshot",
          "when": "view == changeLayersView",
          "group": "navigation"
        },
        {
          "command": "changelayers.discardAll",
          "when": "view == changeLayersView",
          "group": "navigation"
        },
        {
          "command": "changelayers.clearAllLayers",
          "when": "view == changeLayersView",
          "group": "navigation"
        },
        {
          "command": "changelayers.refresh",
          "when": "view == changeLayersView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "changelayers.discard",
          "when": "view == changeLayersView && viewItem == layer",
          "group": "inline@1"
        },
        {
            "command": "changelayers.discardFile",
            "when": "view == changeLayersView && viewItem == layerFile",
            "group": "inline@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.46.0",
    "typescript": "^5.1.6"
  }
}
